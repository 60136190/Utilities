<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIApplication">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Music"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="@dimen/dimen_18dp"
                android:layout_width="80dp"

                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:scaleType="centerInside"
                    android:src= "@drawable/spotify"
                    android:background="@drawable/bo_app"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Spotify"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/dimen_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="vertical">
                <ImageButton
                    android:scaleType="centerInside"
                    android:src= "@drawable/nhaccuatui"
                    android:background="@drawable/bo_app"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nhạc của tui"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/dimen_18dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:background="@drawable/bo_app"
                    android:scaleType="centerInside"
                    android:src= "@drawable/zing"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Zing mp3"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="@dimen/dimen_18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:src="@drawable/nhacwidget"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nhạc"/>
        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Watch"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_margin="@dimen/dimen_18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:scaleType="centerInside"
                    android:src= "@drawable/netflix"
                    android:background="@drawable/bo_app"
                    android:layout_width="200dp"
                    android:layout_height="200dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Netflix"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/dimen_18dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/youtube"
                    android:layout_marginTop="-12dp"
                    android:scaleType="fitCenter"
                    android:src= "@drawable/youtube"
                    android:background="@drawable/bo_app"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_marginTop="-12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Youtube"/>
                <ImageButton
                    android:layout_marginTop="44dp"
                    android:scaleType="fitCenter"
                    android:src= "@drawable/tv"
                    android:background="@drawable/bo_app"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TV"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Read"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="@dimen/dimen_18dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:scaleType="centerCrop"
                    android:src= "@drawable/booksicon"
                    android:background="@drawable/bo_app"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Nano book"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/dimen_18dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:scaleType="fitCenter"
                    android:src= "@drawable/podcast"
                    android:background="@drawable/bo_app"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Podcasts"/>
            </LinearLayout>
            <LinearLayout
                android:layout_margin="@dimen/dimen_18dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageButton
                    android:scaleType="fitCenter"
                    android:src= "@drawable/docbao"
                    android:background="@drawable/bo_app"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="VN News"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>